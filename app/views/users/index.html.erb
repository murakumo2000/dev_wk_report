<p id="notice"><%= notice %></p>

<h1>ユーザー情報一覧</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Password digest</th>
      <th>Grade</th>
      <th>Basecost</th>
      <th>Unitprice1</th>
      <th>Unitprice2</th>
      <th>Unitprice3</th>
      <th>Unitprice4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.grade %></td>
        <td><%= user.basecost %></td>
        <td><%= user.unitprice1 %></td>
        <td><%= user.unitprice2 %></td>
        <td><%= user.unitprice3 %></td>
        <td><%= user.unitprice4 %></td>
        <td><%= link_to '表示', user %></td>
        <% if logged_in_admin? %>
          <td><%= link_to '編集', edit_user_path(user) %></td>
        <% end %>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in_admin? %>
  <%= link_to '新規ユーザー登録', new_user_path %> |
<% end %>
<%= link_to 'メインメニュー', current_user %>
